---
import {Icon} from 'astro-icon';
import { Button, Container, TextCardSection } from '@littlesticks/odyssey-theme-components';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'ابدأ اليوم using the  CLT ',
	description: 'ابدأ اليوم on how to setup and use this  .',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>✨ ابدأ اليوم </h1>
			<div class="cta-buttons__container">
        <Button
					href="https://ticket.aibc.tn/"
          customIcon
					>
          Tickets - التذاكر
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right" />
          </Fragment>
				</Button>
        <Button
					href="https://tn.aibc.tn/"
          customIcon
					>
          مرشد - Loi codes Tunis - قانون تونس 
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right" />
          </Fragment>
				</Button>
				<Button
					href="https://centreprise.aibc.tn/"
					outlined
					newTab
          customIcon
					>
          (قريباً) مرشد Entreprise - شركة مرشد
          <Fragment slot="icon">
            <Icon name="ic:baseline-launch" />
          </Fragment>
				</Button>
			</div>

		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
	}
	.cta-buttons__container :global(a) {
    margin-right: 1rem;
		margin-bottom: 1rem;
	}
	.code-buttons__container {
		margin: 1rem auto;
		display: flex;
		flex-wrap: wrap;
	}
	.code-buttons__container > a {
		margin-right: 1rem;
		margin-bottom: 1rem;
	}
</style>
